import os
import requests

# Define the directory where you want to save your data
DATA_DIR = 'data/raw'
os.makedirs(DATA_DIR, exist_ok=True)

# Function to download data from a URL
def download_data(url, save_path):
    response = requests.get(url)
    if response.status_code == 200:
        with open(save_path, 'wb') as f:
            f.write(response.content)
        print(f"Data downloaded successfully: {save_path}")
    else:
        print(f"Failed to download data. Status code: {response.status_code}")

# Example usage: downloading a dataset from a URL
if __name__ == "__main__":
    dataset_url = 'https://example.com/dataset.csv'  # Replace with your actual dataset URL
    save_path = os.path.join(DATA_DIR, 'dataset.csv')
    download_data(dataset_url, save_path)
